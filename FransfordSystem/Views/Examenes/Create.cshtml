@model FransfordSystem.Models.Examen

@{
    ViewData["Title"] = "Create";
}

<h1>Nuevo examen</h1>

<h4>Complete la siguiente información</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="idCategoria" class="control-label"></label>
                <select asp-for="idCategoria" class="form-control" asp-items="@(new SelectList(@ViewBag.categoriaDeLista, "IdCategoria", "nombreCategoria"))"></select>
                <!--
                <label asp-for="idCategoria" class="control-label"></label>
                <input asp-for="idCategoria" class="form-control" />
                <span asp-validation-for="idCategoria" class="text-danger"></span>
                -->
            </div>
            <div class="form-group">
                <label asp-for="nombreExamen" class="control-label"></label>
                <input asp-for="nombreExamen" class="form-control" placeholder="Nombre del examen"/>
                <span asp-validation-for="nombreExamen" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrecioExamen" class="control-label"></label>
                <input asp-for="PrecioExamen" class="form-control" placeholder="10.50"/>
                <span asp-validation-for="PrecioExamen" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-success" id="success"/>
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                <a href="@Url.Action("Create", "Descripciones")" class="btn btn-primary" role="button" aria-pressed="true">Agregar detalles</a>
            </div>
        </form>
        <div id="message"></div>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
       <script type="text/javascript">
        $(document).ready(function () {
            $('#success').click(function (e) {
                e.preventDefault()
                $('#message').html(`
                <div class="alert alert-success fade in">
                    <button type="button class="close close-alert" 
                        data-dismiss="alert" aria-hidden="true">                       
                    </button>This is a success message
                </div>`);
            })
       </script>
}
